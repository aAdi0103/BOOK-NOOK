<%- include('./partials/header') %>
   
            <div class="h-[85vh] w-full mt-2 flex">
  <div class="w-[70%]">
    <main class="h-[100%] bg-white p-8 shadow ml-4">
        <h2 class="text-xl font-bold mt-[-15px] mb-4">Edit Product</h2>
        <form autocomplete="off" action="/products/update/<%=product._id%>" method="post">
            <div class="mb-6">
                <div class="mb-4">
                    <label class="block mb-2 font-medium">Product Image</label>
                    <input name="image" type="file" class="py-2 px-4 rounded" value="<%=product.image%>">
                </div>
                <div class="grid grid-cols-2 gap-4">
                    <input name="name" type="text" placeholder="Book Name"
                        class="border p-2 rounded w-full" value="<%= product.name%>">
                    <input name="author" type="text" placeholder="Author"
                        class="border p-2 rounded w-full" value="<%= product.author%>">
                    <input name="price" type="text" placeholder="Book Price"
                        class="border p-2 rounded w-full" value="<%= product.price%>">
                    <input name="discount" type="text" placeholder="Discount Price"
                        class="border p-2 rounded w-full" value="<%= product.discount%>">
                    <input name="genre" type="text" placeholder="Genre"
                        class="border p-2 rounded w-full" value="<%= product.genre%>">
                </div>
            </div>
            <input class="px-5 py-2 rounded mt-3 bg-yellow-300 text-white" type="submit"
                value="Edit Product">
        </form>
    </main>
</div>
            </div>
            
            <%- include('./partials/footer') %>