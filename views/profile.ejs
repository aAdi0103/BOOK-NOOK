<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Book Nook</title>
    <link href="https://cdn.jsdelivr.net/npm/remixicon@4.3.0/fonts/remixicon.css" rel="stylesheet">
    <script src="https://cdn.tailwindcss.com"></script>
         <style>
        /* Your existing CSS here */
        
        /* Media query to hide the "Become a Seller" tag on small screens */
        @media (max-width: 600px) {
            .seller-tag {
                display: none;
            }
            .genre{
                display: none;
            }

        }
    </style>
</head>

<body class="bg-gray-100">
    <!-- Profile Dropdown -->
    <div class="profileDrop hidden absolute top-20 right-14 w-48 bg-gray-800 text-white rounded-md shadow-lg z-50">
        <a href="/profile/update"
            class="block py-2 px-4 hover:bg-gray-700 transition-colors duration-300 ease-in-out"> <i
                class="ri-profile-line"></i> Profile</a>
        <a href="" class="block py-2 px-4 hover:bg-gray-700 transition-colors duration-300 ease-in-out"> <i
                class="ri-bnb-fill"></i> Orders</a>
        <a href="" class="block py-2 px-4 hover:bg-gray-700 transition-colors duration-300 ease-in-out"> <i
                class="ri-coupon-line"></i> Coupons</a>
        <a href="/logout" class="block py-2 px-4 hover:bg-gray-700 transition-colors duration-300 ease-in-out"> <i
                class="ri-logout-box-r-line"></i> Logout</a>
    </div>

    <!-- Navigation Bar -->
    <nav class="flex justify-between items-center bg-white py-4 px-8 shadow-lg max-md:w-[100vw]">
        <div class="flex items-center space-x-8">
            <h1 id="btn" class="text-2xl font-extrabold cursor-pointer text-black max-md:text-[10px] max-md:font-bold max-md:ml-[-24px] max-md:mt-[-35px]">BOOK <span class="max-md:mt-[-20px]">NOOK</span></h1>
            <form action="/search" method="get" class="flex">
            <input type="text" name="query" placeholder="Search for books, author, genre"
                class="w-96 p-2 border-none border-gray-300 rounded-md bg-gray-200 focus:outline-none max-md:w-[35vw] max-md:absolute max-md:left-[2vw] max-md:p-1">
            <button type="submit" class="bg-blue-500 text-white px-4 ml-2 rounded-md  max-md:z-20 max-md:absolute max-md:left-[40vw] max-md:top-[4.5vh] max-md:px-2">Search</button>
        </form>
        </div>
        <div class="flex items-center space-x-8 mr-2">
            <div class="seller-tag ">
                <a href="/registerSeller"
                class="text-lg font-semibold text-gray-700 hover:text-gray-900 flex items-center space-x-2"> <i
                    class="ri-store-fill text-xl mr-2 max-md:text-sm"></i> <span class="max-md:text-[15px]">Become a Seller</span></a>
            </div>
            <div class="max-md:mr-[-20px]">
                <a href="/profile/<%= user._id %>"
                    class="text-lg font-semibold text-gray-700 hover:text-gray-900 flex items-center space-x-2 max-md:text-[12px] max-md:mr-[-10px]"> <i
                        class="ri-shopping-cart-line text-xl max-md:text-[12px] mr-2"></i> Cart</a>
            </div>
            <div class="relative">
                <div class="w-16 h-16 rounded-full overflow-hidden max-md:mr-[-20px] max-md:w-12 max-md:h-12">
                    <% if (user.profilePic) { %>
                    <img class="object-cover w-full h-full" src="data:image/jpeg;base64,<%= user.profilePic.toString('base64') %>"
                        alt="Profile Picture">
                    <% } else { %>
                    <img class="object-cover w-full h-full" src="/default-profile-pic.jpg"
                        alt="Default Profile Picture">
                    <% } %>
                </div>
                <h1 class="profile absolute cursor-pointer inset-0 flex items-center justify-center text-blue-400 opacity-0">Profile</h1>
            </div>
        </div>
    </nav>

    <!-- Main Content: Product Grid -->
    <div class="flex items-center justify-between px-8 mt-8">
        <h1 class="text-2xl font-semibold max-md:text-sm">ALL BOOKS</h1>
    </div>

    <!-- Product Grid -->
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6 mt-6 px-8">
        <% products.forEach(function(product) { %>
        <div class="bg-white rounded-lg shadow-lg overflow-hidden">
            <div class="h-48 bg-yellow-100 flex items-center justify-center">
                <img class="max-h-full max-w-full object-contain"
                    src="data:image/jpeg;base64,<%= product.image.toString('base64') %>"
                    alt="<%= product.name %>">
            </div>
            <div class="p-4">
                <h2 class="text-lg font-bold text-gray-800 truncate"><%= product.name %></h2>
                <p class="text-sm text-gray-600">by <%= product.author %></p>
                <div class="flex items-center">
                    <span class="text-gray-900 font-bold text-lg">Rs. <%= product.price %></span>
                    <% if (product.discount > 0) { %>
                    <span
                        class="ml-2 bg-yellow-500 text-xs text-white font-bold py-1 px-2 rounded-full">-<%= product.discount %>%</span>
                    <% } %>
                </div>
                <p class="text-sm text-gray-700 mb-1">Genre: <span class="font-semibold"><%= product.genre %></span>
                </p>
                <p class="text-sm text-gray-700 mb-2">Format: Paperback</p>
                <div class="flex justify-center space-x-4">
                    <a href="/addtocart/<%= product._id %>"
                        class="add bg-blue-500 hover:bg-blue-600 text-white py-2 px-4 rounded-md text-sm flex items-center justify-center">
                        <span>Add to Cart</span>
                        <i class="ri-shopping-cart-fill ml-1"></i>
                    </a>
                    <a href="#"
                        class="bg-green-500 hover:bg-green-600 text-white py-2 px-4 rounded-md text-sm flex items-center justify-center">
                        <span>Buy Now</span>
                        <i class="ri-flashlight-line ml-1"></i>
                    </a>
                </div>
            </div>
        </div>
        <% }); %>
    </div>

