<%- include('./partials/header') %>
   
            <div class="h-[85vh] w-full mt-2 flex">
  <div class="w-[70%]">
    <main class="h-[100%] bg-white p-8 shadow ml-4">
        <h2 class="text-xl font-bold mt-[-15px] mb-4">Update Profile</h2>
        <form autocomplete="off" action="/profile/update/<%=user._id%>" method="post" enctype="multipart/form-data">
            <div class="mb-6">
                <h3 class="text-lg font-semibold mb-2">Your Details</h3>
                <div class="mb-4">
                    <label class="block mb-2 font-medium">Your Image</label>
                    <input name="image" type="file" class="py-2 px-4 rounded" value="Select File">
                </div>
                <div class="grid grid-cols-2 gap-4">
                    <input name="name" type="text" placeholder="Name"
                        class="border p-2 rounded w-full" value="<%=user.name%>">
                    <input name="age" type="number" placeholder="Age"
                        class="border p-2 rounded w-full" value="<%=user.age%>">
                    <input name="address" type="text" placeholder="address"
                        class="border p-2 rounded w-full" value="<%=user.address%>">
                        <input type="text" placeholder="Contact" name="contact" class="border p-2 rounded w-full" value="<%=user.contact%>">
                    <input name="email" type="email" placeholder="Email"
                        class="border p-2 rounded w-full" value="<%=user.email%>">
                    
                </div>
            </div>
            <input class="px-5 py-2 rounded mt-3 bg-blue-500 text-white" type="submit"
                value="Update Profile">
        </form>
    </main>
</div>
            </div>
            
            <%- include('./partials/footer') %>